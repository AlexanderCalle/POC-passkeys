generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  username String    @unique
  devices  Json      @default("[]")
  PassKey  PassKey[]

  @@map(name: "users")
}

model PassKey {
  id              Int     @id @default(autoincrement())
  passkey_id      String
  public_key      Bytes
  user_id         Int
  user            User    @relation(fields: [user_id], references: [id])
  webauthnUser_id String
  counter         BigInt
  device_type     String
  back_up         Boolean
  devices         Json

  @@map(name: "passkeys")
}
